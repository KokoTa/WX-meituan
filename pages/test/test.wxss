/* pages/test/test.wxss */
view {
  text-align: center;
}

.test-item {
  margin-bottom: 100rpx;
}

.test-title {
  font-size: 26px;
  text-align: center;
  color: #fff;
  background: lightblue;
  text-shadow: 0 0 10px black;
  padding: 50rpx 0;
  border: 5px solid lightgray;
  box-sizing: border-box;
}

.swiper {
  width: 100%;
  height: 500rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
}

.mask {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  display: none;
}
.mask-content {
  width: 80%;
  background: #fff;
  margin: 100rpx auto 0;
  box-sizing: border-box;
  border-radius: 10px;
  padding: 24rpx;
  text-align: left;
}
.mask-number {
  display: flex;
  height: 150rpx;
  font-size: 28px;
  margin: 20rpx 0;
}
.mask-item {
  flex: 1;
  line-height: 150rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid lightgray;
}
.show {
  display: block;
}
.active {
  border-bottom: 5px solid green;
}
.mask-input {
  position: absolute;
  top: -100%;
  left: -100%;
}

button {
  background: lightcyan;
  line-height: 150rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}