@import '../templates/list/list.wxss';

/* 750rpx = 1个屏幕的宽度，也就是说 750 的设计稿，1 设计稿的宽度 = 1rpx，rpx 会自适应不同的 dpi */

/* 头部 */
.header {
  height: 92rpx;
  background: #181818;
  width: 375px;
}
.city {
  float: left;
  width: 204rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 29rpx;
  color: #d3b9a0;
}
.city:after {
  content:'';
  display: inline-block;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #d3b9a0 transparent;
  margin-left: 10rpx;
  vertical-align: middle;
}
.user-info {
  float: right;
  width: 48rpx;
  height: 48rpx;
  margin: 23rpx 30rpx 0 0;
}

.user-info image {
  width: 100%;
  height: 100%;
}

/* 选区 */
.nav-list {
  display: flex;
  height: 200rpx;
  background: #fff;
}
.nav-list navigator {
  margin: auto;
  flex: 1;
  text-align: center;
}
.nav-list image {
  display: block;
  width: 87.5rpx;
  height: 87.5rpx;
  margin: 0 auto;
}
.nav-list text {
  display: block;
  line-height: 51rpx;
  font-size: 26rpx;
}

/* 列表 */
.hot {
  margin-top: 20rpx;
  background: #fff;
}
.hot-title {
  font-size: 30rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #777;
}